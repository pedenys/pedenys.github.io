---
import LanguagePicker from "components/LanguagePicker.component.astro";
---

<header class="default-bottom-spacing">
    <div>
        <a id="header__homepage_link" href="/"
            ><p class="name">Pierre-Emmanuel Denys</p></a
        >
        <a href="/quotes" id="header__homepage_tagline"
            ><p class="subtitle grey-1">Disappear here</p></a
        >
    </div>
    <div class="avatar-container">
        <a href="/"><img src="/assets/avatar.png" alt="" /></a>
    </div>
</header>

<style>
    header {
        width: 100%;

        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;

        .name {
            color: var(--white-1);
            font-size: 20px;

            margin-bottom: 4px;
        }

        #header__homepage_link,
        #header__homepage_tagline {
            text-decoration: none;
            cursor: pointer;
        }

        .subtitle {
            font-size: 19px;
        }

        .avatar-container {
            align-self: flex-start;

            display: flex;
            flex-direction: column;
            align-items: center;
            img {
                width: 32px;
                height: 32px;
                border-radius: 50%;
                filter: brightness(75%);
            }
        }
    }
</style>
